@model IEnumerable<DoAnThucTap.Web.Areas.Admin.ViewModels.News.ListNewsItemVM>

@{
    ViewData["Title"] = "Danh sách tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



@if (User.IsInPermission(AuthConst.News.CREATE))
{
    <div class="my-2">
        <a asp-action="Create" asp-controller="News" asp-area="Admin" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> &nbsp; Thêm mới tin tức
        </a>
    </div>
}


<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Tiêu đề</th>
                <th>Thể loại</th>
                <th>Ngày tạo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fit">@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.IdCategoryNew</td>
                    <td class="fit">@item.CreateAt.ToDMYHM()</td>
                    <td class="fit">
                        @if (User.IsInPermission(AuthConst.News.DELETE))
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-outline-secondary btn-sm"><i class="fas fa-trash"></i></a>
                        }
                        @if (User.IsInPermission(AuthConst.News.UPDATE))
                        {

                            <a asp-action="Update" asp-route-id="@item.Id"
                               class="btn btn-outline-secondary btn-sm"><i class="fas fa-pen"></i></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<partial name="_Pager" />
