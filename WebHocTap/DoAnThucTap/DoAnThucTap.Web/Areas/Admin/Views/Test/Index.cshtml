@model IEnumerable<DoAnThucTap.Web.Areas.Admin.ViewModels.Test.ListTestItemVM>

@{
    ViewData["Title"] = "Danh sách bài kiểm tra";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@if (User.IsInPermission(AuthConst.Test.CREATE))
{
    <div class="my-2">
        <a asp-action="Create" asp-controller="Test" asp-area="Admin" asp-route-id="@ViewBag.IdLesson" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> &nbsp; Thêm câu hỏi 
        </a>
    </div>
}


<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Câu hỏi</th>
                <th>Ngày tạo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fit">@item.Id</td>
                    <td class="fit">@item.Question</td>
                    <td class="fit">@item.CreateAt.ToDMYHM()</td>
                    <td class="fit">
                        @if (User.IsInPermission(AuthConst.News.DELETE))
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-outline-secondary btn-sm"><i class="fas fa-trash"></i></a>
                        }
                        @if (User.IsInPermission(AuthConst.News.UPDATE))
                        {

                            <a asp-action="Detail" asp-route-id="@item.Id"
                               class="btn btn-outline-secondary btn-sm"><i class="fas fa-pen"></i></a>
                        }
                        @*@if (User.IsInPermission(AuthConst.Subject.VIEW_DETAIL))
                            {
                                <a asp-action="Index" asp-controller="Chapter" asp-area="Admin" asp-route-id="@item.Id"
                                   class="btn btn-outline-secondary btn-sm"><i class="fa-solid fa-eye"></i></a>
                            }*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<partial name="_Pager" />
